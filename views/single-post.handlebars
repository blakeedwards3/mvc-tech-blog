<!-- displaying articles -->
{{> post-info post}}

<!-- displaying form and comments (only when logged in) -->
{{#if loggedIn}}
<form class="comment-form">
    <div>
        <textarea class="ml-5" name="comment-body"></textarea>
    </div>
    <div>
        <button class="button is-success ml-5 mb-5" type="submit">Add Comment</button>
    </div>
</form>
{{/if}}
<h2>All Comments</h2>
{{> comments post.comments}}

{{#if loggedIn}}
<script src="'/js/comment.js"></script>
{{/if}}